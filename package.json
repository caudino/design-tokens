{
  "name": "@contactlab/design-tokens",
  "version": "1.0.0",
  "description": "Contactlab Design Tokens - Named entities that store visual design attributes.",
  "author": {
    "name": "Contactlab UXD Team",
    "email": "uxd@contactlab.com",
    "homepage": "https://ux.contactlab.com/"
  },
  "contributors": [
    "Angela Gargallo <angela.gargallo@contactlab.com>",
    "Giovanni Tramutola <giovanni.tramutola@contactlab.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/contactlab/design-tokens"
  },
  "license": "MIT",
  "engines": {
    "node": ">= 8.0",
    "npm": ">= 6.0"
  },
