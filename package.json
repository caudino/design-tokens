{
  "name": "@contactlab/design-tokens",
  "version": "9.0.1",
  "description": "Named entities that store visual design info, in order to maintain a scalable, consistent system for UI development.",
  "author": {
    "name": "Contactlab UXD Team",
    "email": "uxd@contactlab.com",
    "homepage": "https://ux.contactlab.com/"
  },
  "contributors": [
    "Giovanni Tramutola <giovanni.tramutola@contactlab.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/contactlab/design-tokens"
  },
  "engines": {
    "node": ">=8.0",
    "npm": ">=5.0"
  },
  "files": [
    "dist",
    "*.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint:css": "stylelint src/css/**/*.{css,less,scss}",
    "minify:css": "postcss src/css/**/*.{css,less,scss} --base=src --dir=dist",
    "minify:svg": "svgo src/illustrations/*.svg --output=dist/illustrations --disable=inlineStyles",
    "build": "run-p -cln minify:css minify:svg",
    "prerelease": "npm run lint:css && npm run build",
    "release": "np"
  },
  "devDependencies": {
    "cssnano": "4.1.10",
    "cssnano-preset-advanced": "4.0.7",
    "husky": "1.3.1",
    "np": "4.0.2",
    "npm-run-all": "4.1.5",
    "postcss-cli": "6.1.2",
    "postcss-nested": "4.1.2",
    "prettier": "1.17.0",
    "pretty-quick": "1.10.0",
    "stylelint": "10.0.1",
    "stylelint-config-pack": "2.0.0",
    "svgo": "1.2.1"
  },
  "keywords": [
    "contactlab",
    "design-tokens",
    "design-patterns",
    "ui-theme"
  ]
}
